<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="johnpier.AppMain">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <bottom>
        <Button fx:id="okButton" alignment="CENTER" defaultButton="true" mnemonicParsing="false"
                prefHeight="26.0" prefWidth="48.0" text="Ок" textAlignment="CENTER"
                BorderPane.alignment="BOTTOM_RIGHT">
            <BorderPane.margin>
                <Insets left="10.0" top="10.0"/>
            </BorderPane.margin>
        </Button>
    </bottom>
    <center>
        <TextField fx:id="nameField" BorderPane.alignment="CENTER"/>
    </center>
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="22.0"
                       prefWidth="177.0" text="Игра завершена!" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0"/>
                    </VBox.margin>
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Label>
                <Label prefHeight="18.0" prefWidth="155.0" text="Введите ваше имя" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="6.0" right="10.0" top="2.0"/>
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
    </top>
</BorderPane>
