<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="johnpier.AppMain">
    <children>
        <BorderPane AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <bottom>
                <Button fx:id="closeButton" alignment="CENTER" cancelButton="true" defaultButton="true" mnemonicParsing="false" text="Закрыть" textAlignment="CENTER" BorderPane.alignment="BOTTOM_RIGHT">
                    <BorderPane.margin>
                        <Insets left="10.0" top="10.0" />
                    </BorderPane.margin>
                </Button>
            </bottom>
            <top>
                <VBox BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="errorLabel" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="22.0" prefWidth="177.0" text="Ошибка" textAlignment="CENTER" textFill="#cf6d6d">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="15.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </top>
         <left>
                  <Label alignment="CENTER" prefHeight="70.0" prefWidth="194.0" text="Ошибка соединения с сервером. Попробуйте перезапустить приложение " textAlignment="CENTER" wrapText="true" BorderPane.alignment="CENTER" />
         </left>
        </BorderPane>
    </children>
</AnchorPane>
